<h1>Editing User</h1>



<%= # render "form_edit" 
%>

 <%= @user.id  %>
<div style="margin:50px;">
  <h3>Create a User</h3>
  <%= form_tag edit_user_path do %>
    <%= text_field_tag :name, nil, placeholder: @user.name %><br />
    <%= number_field_tag :age, nil, placeholder: @user.age %><br />
    <%=  hidden_field_tag :id, @user.id 
     %>
    <%= submit_tag "Update Profile" %>
  <% end %>
  <%= link_to 'View All', users_path(@users)%>
</div>

